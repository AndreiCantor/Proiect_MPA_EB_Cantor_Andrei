@model IEnumerable<Proiect_MPA_EB_Cantor_Andrei.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (!Model.Any())
{
    <div class="d-flex flex-column align-items-center justify-content-center" style="height: 70vh;">
        <h1 class="text-center text-primary mb-4">You have no reservations yet!</h1>
        <p class="text-center text-muted fs-5">
            Explore our events and make your first reservation today!
        </p>
        <div class="d-flex gap-3">
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Events" asp-action="Index">
                Browse Events
            </a>
            <a class="btn btn-primary" asp-action="Create">
                Create a Reservation
            </a>
        </div>
    </div>
}
else
{
    <div class="container">
        <h1 class="mb-4">Your Reservations</h1>

        <p>
            <a class="btn btn-primary" asp-action="Create">Create New Reservation</a>
        </p>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Event)</th>
                    <th>@Html.DisplayNameFor(model => model.ReservationDate)</th>
                    <th>@Html.DisplayNameFor(model => model.NumberOfSeats)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@item.EventId">
                                @item.Event.Name
                            </a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.ReservationDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.NumberOfSeats)</td>
                        <td>
                            <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}